
	<div class="col-xs-6 col-xs-offset-3">
		<div class="container-fluid" id="sign_up"><h1> Sign Up </h1>

		<%= form_for(@store_owner, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-10") do |f| %>
		<%= f.text_field :name, placeholder: 'First Name' %>
	
		<%= f.email_field :email, placeholder: 'Email (username)' %>
		<%= f.password_field :password, placeholder: 'Password' %>

		<%= f.submit "Sign Up", class: "btn btn-success" %>
	
<% end %>
		
	</div>
</body>